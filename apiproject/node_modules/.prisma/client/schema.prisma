// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id       String  @id
  name     String
  email    String  @unique
  password String
  Tesks    Tesks[]
}

model Tesks {
  id          String   @id
  title       String
  description String
  userId      String
  status      Int
  data        DateTime
  user        Users    @relation(fields: [userId], references: [id])
}
