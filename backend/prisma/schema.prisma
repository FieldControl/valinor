datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  email          String   @unique
  password       String
  role           Role

  leaderCards    Card[]   @relation("LeaderCards")
  receivedCards  Card[]   @relation("MemberCards")
  assignedTasks  Task[]   @relation("AssignedTasks")
}

model Card {
  id             Int       @id @default(autoincrement())
  title          String
  sentByMember   Boolean   @default(false)
  leaderId       Int
  memberId       Int
  leader         User      @relation(fields: [leaderId], references: [id], name: "LeaderCards")
  member         User      @relation(fields: [memberId], references: [id], name: "MemberCards")
  tasks          Task[]    @relation("CardTasks")
}

model Task {
  id          Int       @id @default(autoincrement())
  description String
  status      TaskStatus @default(TODO)
  cardId      Int
  card        Card      @relation(fields: [cardId], references: [id], name: "CardTasks")
  assignedToId Int
  assignedTo  User      @relation(fields: [assignedToId], references: [id], name: "AssignedTasks")
}

enum Role {
  LEADER
  MEMBER
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}