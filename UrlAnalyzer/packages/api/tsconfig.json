{
	"extends": "../../tsconfig.json",
	// Mapped from https://www.typescriptlang.org/tsconfig
	"compilerOptions": {
		"module": "Node16",
		"moduleResolution": "Node16",
		"resolveJsonModule": true,
		"outDir": "dist",
		"lib": ["ESNext"],
		"baseUrl": "src",
		"paths": {
			"@database/*": ["database/*"],
			"@functions/*": ["functions/*"],
			"@utils/*": ["utils/*"],
			"@structures/*": ["structures/*"],
			"@types": ["types/index.js"]
		}
	},
	"include": ["src/**/*.ts", "scripts/*.ts"]
}
