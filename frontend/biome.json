{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
   "files": {
     "ignoreUnknown": true,
     "ignore": [
       ".angular",
       ".vscode",
       "coverage",
       "dist",
       "node_modules",
       "out-tsc",
       "src/assets",
       "src/environments",
       "src/favicon.ico",
       "src/tsconfig.app.json",
       "src/tsconfig.spec.json",
       "src/tsconfig.json",
       "src/tslint.json",
       ".drawio",
       "*.d.ts"
     ]
   },
   "vcs": {
     "enabled": true,
     "clientKind": "git",
     "useIgnoreFile": true
   },
   "formatter": {
     "enabled": true,
     "indentStyle": "tab",
     "indentWidth": 2,
     "lineEnding": "lf"
   },
   "organizeImports": {
     "enabled": true
   },
   "linter": {
     "enabled": true,
     "rules": {
       "recommended": true,
       "style": {
         "useImportType": "off",
         "useNamingConvention": {
           "level": "error",
           "options": {
             "requireAscii": true,
             "strictCase": false
           }
         },
         "useFilenamingConvention": "error"
       },
       "correctness": {
         "noUnusedImports": "warn",
         "noUnusedVariables": "error",
         "useExhaustiveDependencies": "warn"
       }
     }
   },
   "javascript": {
     "formatter": {
       "enabled": true,
       "quoteStyle": "single",
       "indentStyle": "tab",
       "indentWidth": 2
     }
   },
   "json": {
     "parser": {
       "allowComments": true,
       "allowTrailingCommas": true
     },
     "formatter": {
       "enabled": true,
       "indentStyle": "tab",
       "indentWidth": 2,
       "trailingCommas": "none"
     }
   },
   "css": {
     "formatter": {
       "enabled": true,
       "indentStyle": "tab",
       "indentWidth": 2,
       "quoteStyle": "single"
     }
   }
 }
